{
	"extends": "@jonny",
	"rules": {
		"no-console": "error",
		"no-restricted-imports": [
			"error",
			{
				"patterns": ["@remotion/*/src/*", "remotion"]
			}
		]
	},
	"overrides": [
		{
			"files": "./src/editor/**",
			"rules": {
				"no-console": "off",
				"no-restricted-imports": [
					"error",
					{
						"patterns": ["@remotion/*/src/*"]
					}
				]
			}
		},
		{
			"files": "./src/preview-server/error-overlay/**",
			"rules": {
				"no-restricted-imports": [
					"error",
					{
						"patterns": ["@remotion/*/src/*"]
					}
				]
			}
		}
	]
}
